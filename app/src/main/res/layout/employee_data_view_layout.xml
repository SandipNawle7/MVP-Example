<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:elevation="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="1dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="5dp"
    android:id="@+id/mainLinId">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">



        <TextView
            android:id="@+id/nameIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_shape_profile"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="@color/white_color"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_toLeftOf="@id/delete_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/nameIcon">
            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/empId"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Id:"
                    android:textColor="@color/black_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/empName"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="3dp"
                    android:text="Name:"
                    android:textColor="@color/black_color"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_below="@id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/empAge"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Age:"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_color" />

                <TextView
                    android:id="@+id/empSalary"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="3dp"
                    android:text="Salary:"
                    android:textColor="@color/black_color"
                    android:textSize="18sp" />

            </LinearLayout>



        </RelativeLayout>

        <ImageView
            android:id="@+id/delete_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/delete_ic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>